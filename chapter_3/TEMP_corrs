#%%
l=[]
varnames = []
for mclass in matList:
    mname = mclass['name']
    for key in mclass['nodes'].keys():
        # print(mname + key)
        nodenames = mclass['nodes'][key][0].keys()
        values = [[d[nodename] for nodename in nodenames] for d in mclass['nodes'][key]]
        varnames.append(mname + '_' + key)
        l.append(values)

k=np.array(l)
k.shape


